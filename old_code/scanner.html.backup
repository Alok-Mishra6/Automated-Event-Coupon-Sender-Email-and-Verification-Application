        function stopScanner() {
            scanning = false;
            
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
                stream = null;
            }
            
            if (video) {
                video.srcObject = null;
            }
            
            document.getElementById('startBtn').disabled = false;
            document.getElementById('stopBtn').disabled = true;
            
            updateStatus('Scanner stopped', 'error');
        }
        
        function scanQRCode() {
            if (!scanning || !video) return;
            
            if (video.readyState === video.HAVE_ENOUGH_DATA) {
                canvas.width = video.videoWidth;
                canvas.height = video.videoHeight;
                context.drawImage(video, 0, 0, canvas.width, canvas.height);
                
                const imageData = context.getImageData(0, 0, canvas.width, canvas.height);
                const code = jsQR(imageData.data, imageData.width, imageData.height);
                
                if (code) {
                    updateStatus('QR Code detected - Verifying...', 'success');
                    processQRCode(code.data);
                    return; // Stop scanning after successful detection
                }
            }
            
            if (scanning) {
                requestAnimationFrame(scanQRCode);
            }
        }
        
        async function processQRCode(qrData) {
            try {
                // Parse QR code data - it should contain email, encrypted data, and coupon ID
                let couponInfo;
                try {
                    couponInfo = JSON.parse(qrData);
                } catch (e) {
                    // Fallback for old format QR codes (just encrypted data)
                    const email = prompt('Please enter the email address associated with this coupon:');
                    if (!email) {
                        updateStatus('Verification cancelled', 'error');
                        if (scanning) requestAnimationFrame(scanQRCode);
                        return;
                    }
                    couponInfo = { email: email, data: qrData };
                }
                
                // Validate QR code structure
                if (!couponInfo.email || !couponInfo.data) {
                    showResult('‚ùå Invalid QR code format. Please try again.', 'error');
                    updateStatus('Scanner active - Position QR code in the frame', 'scanning');
                    if (scanning) requestAnimationFrame(scanQRCode);
                    return;
                }
                
                updateStatus('‚ö° Fast scan: Email auto-extracted (' + couponInfo.email + ')', 'success');
                await verifyCoupon(couponInfo.data, couponInfo.email);
                
            } catch (error) {
                console.error('Error processing QR code:', error);
                showResult('‚ùå Error processing QR code. Please try again.', 'error');
                updateStatus('Scanner active - Position QR code in the frame', 'scanning');
                if (scanning) requestAnimationFrame(scanQRCode);
            }
        }
        
        async function verifyCoupon(encryptedData, email) {
            try {
                const response = await fetch('/verify-coupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        encrypted_data: encryptedData,
                        email: email
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    updateStatus('‚úÖ Coupon verified successfully!', 'success');
                    showResult(`
                        <h3>‚úÖ Coupon Verified & Redeemed!</h3>
                        <div class="coupon-details">
                            <div class="detail-item"><strong>Coupon ID:</strong> ${result.coupon_id}</div>
                            <div class="detail-item"><strong>Email:</strong> ${result.email}</div>
                            <div class="detail-item"><strong>Event:</strong> ${result.event_name}</div>
                            <div class="detail-item"><strong>Created:</strong> ${new Date(result.created_at).toLocaleString()}</div>
                        </div>
                        <p style="margin-top: 15px; font-weight: bold;">This coupon has been marked as used and cannot be redeemed again.</p>
                    `, 'success');
                    
                    // Stop scanning after successful verification
                    stopScanner();
                    
                } else {
                    updateStatus('‚ùå Coupon verification failed', 'error');
                    
                    let errorMessage = '‚ùå Coupon Verification Failed<br><br>';
                    
                    switch (result.error_code) {
                        case 'ALREADY_USED':
                            errorMessage += `<strong>Reason:</strong> This coupon has already been used<br>`;
                            if (result.used_at) {
                                errorMessage += `<strong>Used at:</strong> ${new Date(result.used_at).toLocaleString()}`;
                            }
                            break;
                        case 'EXPIRED':
                            errorMessage += '<strong>Reason:</strong> This coupon has expired (valid for 24 hours only)';
                            break;
                        case 'NOT_FOUND':
                            errorMessage += '<strong>Reason:</strong> Coupon not found in database';
                            break;
                        case 'DECRYPTION_FAILED':
                            errorMessage += '<strong>Reason:</strong> Invalid or corrupted coupon data';
                            break;
                        default:
                            errorMessage += `<strong>Reason:</strong> ${result.error}`;
                    }
                    
                    showResult(errorMessage, 'error');
                    
                    // Continue scanning for other coupons
                    setTimeout(() => {
                        if (scanning) {
                            updateStatus('Scanner active - Position QR code in the frame', 'scanning');
                            requestAnimationFrame(scanQRCode);
                        }
                    }, 3000);
                }
                
            } catch (error) {
                console.error('Error verifying coupon:', error);
                updateStatus('‚ùå Verification error', 'error');
                showResult('‚ùå Network error during verification. Please check your connection and try again.', 'error');
                
                setTimeout(() => {
                    if (scanning) {
                        updateStatus('Scanner active - Position QR code in the frame', 'scanning');
                        requestAnimationFrame(scanQRCode);
                    }
                }, 3000);
            }
        }
        
